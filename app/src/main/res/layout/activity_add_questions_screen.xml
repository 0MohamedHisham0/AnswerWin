<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Activities.Add_Questions_Screen">

    <ImageView
        android:id="@+id/logoQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/text_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/backJewelQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_jewel_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logoQ"
        android:padding="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logoQ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

           <TextView
               android:id="@+id/tvEnterQ"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="20dp"
               android:layout_marginTop="5dp"
               android:text="ادخل السؤال"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:textSize="15dp"/>

            <EditText
                android:id="@+id/etQ"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/tvEnterQ"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/purple_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/roundedcorner"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/tvEnterTrueQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/etQ"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:text="ادخل الاجابة الصحيحة"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/etTrueQ"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/tvEnterTrueQ"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/purple_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:background="@drawable/roundedcorner"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/tvEnterOtherQs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/etTrueQ"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:text="ادخل الاجابابات الأخرى"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/etFalseQ1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/tvEnterOtherQs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/purple_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:background="@drawable/roundedcorner"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <EditText
                android:id="@+id/etFalseQ2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/etFalseQ1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/purple_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:background="@drawable/roundedcorner"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <EditText
                android:id="@+id/etFalseQ3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/etFalseQ2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/purple_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:padding="7dp"
                android:background="@drawable/roundedcorner"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <carbon.widget.Button
                android:id="@+id/buSaveQs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/purple_color"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="حفظ"
                android:textColor="@color/green_color"
                android:textStyle="bold"
                app:carbon_cornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etFalseQ3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>