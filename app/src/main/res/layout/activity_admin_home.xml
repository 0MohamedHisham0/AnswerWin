<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Activities.AdminHomeActivity">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit_QS_admin_home"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/purple_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAdminHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/ivToolbarLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/text_pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <carbon.widget.Button
            android:id="@+id/buBooled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/green_color"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:text="المقبولون للسحب"
            android:textColor="@color/purple_color"
            android:textStyle="bold"
            app:carbon_cornerRadius="25dp"
            app:carbon_rippleColor="@color/rippleColor"
            app:carbon_stroke="@color/purple_color"
            app:carbon_strokeWidth="2dp"
            app:layout_constraintEnd_toStartOf="@id/buQuDash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buWinDash" />

        <carbon.widget.Button
            android:id="@+id/buWinDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@color/green_color"
            android:paddingStart="54dp"
            android:paddingEnd="54dp"
            android:text="لائحة تحكم الرابحين"
            android:textColor="@color/purple_color"
            android:textStyle="bold"
            app:carbon_cornerRadius="25dp"
            app:carbon_rippleColor="@color/rippleColor"
            app:carbon_stroke="@color/purple_color"
            app:carbon_strokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivToolbarLogo" />

        <carbon.widget.Button
            android:id="@+id/buQuDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/green_color"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="لائحة تحكم الأسئلة"
            android:textColor="@color/purple_color"
            android:textStyle="bold"
            app:carbon_cornerRadius="25dp"
            app:carbon_rippleColor="@color/rippleColor"
            app:carbon_stroke="@color/purple_color"
            app:carbon_strokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buBooled"
            app:layout_constraintTop_toBottomOf="@id/buWinDash" />

        <carbon.widget.Button
            android:id="@+id/buAdminLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/green_color"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:text="تسجيل خروج"
            android:textColor="@color/purple_color"
            android:textStyle="bold"
            app:carbon_cornerRadius="25dp"
            app:carbon_rippleColor="@color/rippleColor"
            app:carbon_stroke="@color/purple_color"
            app:carbon_strokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buQuDash" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>